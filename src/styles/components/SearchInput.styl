.github-logo
  width: 100%
  display: flex
  margin-top: 2%
  justify-content: center
  & img
    width: 15%
    filter: invert(91%) sepia(4%) saturate(6741%) hue-rotate(194deg) brightness(91%) contrast(93%)

.input-searcher
  width: 100%
  height: 20%
  display: flex
  justify-content: center
  align-items: center
  & input
    width: 50%
    height: 40%
    border: 1px solid #a8a4ce
    border-radius: 20px 0 0 20px 
    padding-left: 20px;
    color: #61606e;
    &:focus-visible
      outline: none
  & button
    color: white
    background-color: #495C83
    width: 20%
    height: 42%
    border: none
    border-radius: 0 20px 20px 0
    cursor: pointer
    &:hover
      background-color: #384a6e
